
@inject IMostrarMensajes mostrarMensajes
<EditForm Model="vendedor" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <a class="btn btn-success" href="javascript: history.go(-1)">Volver</a>
        </div>

        <div class="col-md-5">

        </div>
    </div>
    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Nomrbre:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Nombre"></InputText>
                <ValidationMessage For="@(() => vendedor.Nombre)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Apellido:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Apellido"></InputText>
                <ValidationMessage For="@(() => vendedor.Apellido)" />
            </div>
        </div>
    </div>

    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Dni:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Dni"></InputText>
                <ValidationMessage For="@(() => vendedor.Dni)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Url:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Url"></InputText>
                <ValidationMessage For="@(() => vendedor.Url)" />
            </div>
        </div>
    </div>


    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Matricula:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Matricula"></InputText>
                <ValidationMessage For="@(() => vendedor.Matricula)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Mail:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Mail"></InputText>
                <ValidationMessage For="@(() => vendedor.Mail)" />
            </div>
        </div>
    </div>

    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Celular1:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Celular1"></InputText>
                <ValidationMessage For="@(() => vendedor.Celular1)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Celular2:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Celular2"></InputText>
                <ValidationMessage For="@(() => vendedor.Celular2)" />
            </div>
        </div>
    </div>


    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Domicilio:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Domicilio"></InputText>
                <ValidationMessage For="@(() => vendedor.Domicilio)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Localidad:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Localidad"></InputText>
                <ValidationMessage For="@(() => vendedor.Localidad)" />
            </div>
        </div>
    </div>

    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">ComisionPrima:</label>
            <div>
                <InputNumber class="form-control" @bind-Value="vendedor.ComisionPrima"></InputNumber>
                <ValidationMessage For="@(() => vendedor.ComisionPrima)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Whatsapp:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.Whatsapp"></InputText>
                <ValidationMessage For="@(() => vendedor.Whatsapp)" />
            </div>
        </div>
    </div>

    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Deseo Dar Datos:</label>
            <div>
                <InputCheckbox class="form-control" @bind-Value="vendedor.BotonDeseoDarDatos"></InputCheckbox>
                <ValidationMessage For="@(() => vendedor.BotonDeseoDarDatos)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">Boton Continuar:</label>
            <div>
                <InputCheckbox class="form-control" @bind-Value="vendedor.BotonContinuar"></InputCheckbox>
                <ValidationMessage For="@(() => vendedor.BotonContinuar)" />
            </div>
        </div>
    </div>


    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Acarreo:</label>
            <div>
                <InputCheckbox class="form-control" @bind-Value="vendedor.Acarreo"></InputCheckbox>
                <ValidationMessage For="@(() => vendedor.Acarreo)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">GNC_Montos:</label>
            <div>
                <InputNumber class="form-control" @bind-Value="vendedor.GncMonto"></InputNumber>
                <ValidationMessage For="@(() => vendedor.GncMonto)" />
            </div>
        </div>
    </div>


    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Ajuste:</label>
            <div>
                <InputNumber class="form-control" @bind-Value="vendedor.Ajuste" min="0" max="100"></InputNumber>
                <ValidationMessage For="@(() => vendedor.Ajuste)" />
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">DescuentoRecargas:</label>
            <div>
                <InputNumber class="form-control" @bind-Value="vendedor.DescuentoRecarga" min="-10" max="100"></InputNumber>
                <ValidationMessage For="@(() => vendedor.DescuentoRecarga)" />
            </div>
        </div>
    </div>


    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">Logo:</label>
            <div>
                <InputImg Label="Foto" ImagenSeleccionada="ImagenSeleccionada" ImagenTemporal="@imagenURL" />
            </div>
        </div>
        <div class="col-md-5">
            <label style="color:white">Codigo Prudencia:</label>
            <div>
                <InputText class="form-control" @bind-Value="vendedor.CodigoInternoPrudencia" maxlength="8"  ></InputText>
            </div>

        </div>
    </div>



    <div class="row" style="margin:10px">
        <div class="col-md-5">
            <label style="color:white">CUIT:</label>
            <div class="row">
                <InputNumber @bind-Value="oPrefijo" class="form-control" style="width:65px;" max="99" @onblur="CuitOnChange"></InputNumber>
                <label style="color:white;vertical-align:central">&nbsp;</label>
                <InputNumber @bind-Value="oNumeroDocumento" class="form-control" style="width:120px;" max="9999999999" @onblur="CuitOnChange"></InputNumber>
                <label style="color:white">&nbsp;</label>
                <InputNumber @bind-Value="oDigitoVerif" class="form-control" style="width:55px;" max="9" @onblur="CuitOnChange"></InputNumber>
            </div>
        </div>

        <div class="col-md-5">
            <label style="color:white">IVA:</label>
            <div>
                <InputSelect @bind-Value="vendedor.IVA" class="form-control">
                    <option value="0">Posicion Iva...</option>

                    <option value="1">RESPONSABLE INSCRIPTO</option>
                    <option value="2">MONOTRIBUTO</option>
                </InputSelect>
            </div>
        </div>
    </div>



    <button class="btn btn-success" type="button" @onclick="@(() => SaveOnClick())">Guardar Cambios</button>
</EditForm>

@code {
    [Parameter] public Vendedor vendedor { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    private int? oPrefijo;
    private int? oNumeroDocumento;
    private int? oDigitoVerif;
    private string imagenURL;

    protected override void OnInitialized()
    {

        if (!string.IsNullOrEmpty(vendedor.Logo))
        {
            imagenURL = vendedor.Logo;
            //  vendedor.Logo = null;   VER ASOSA
        }
        if (!string.IsNullOrEmpty(vendedor.CUIT))
        {
            oPrefijo = int.Parse(vendedor.CUIT.Substring(0, 2));
            oNumeroDocumento = int.Parse(vendedor.CUIT.Substring(2, 8));
            oDigitoVerif = int.Parse(vendedor.CUIT.Substring(10, 1));
        }
    }
    private void ImagenSeleccionada(string imagenBase64)
    {
        vendedor.Logo = imagenBase64;
        imagenURL = null;
    }
    private void CuitOnChange()
    {
        vendedor.CUIT = oPrefijo.ToString().Trim() + oNumeroDocumento.ToString().Trim() + oDigitoVerif.ToString().Trim();
    }
    private async Task SaveOnClick()
    {
        if (!string.IsNullOrWhiteSpace(vendedor.Logo))
        {
            imagenURL = null;
        }


        #region Valido Form
        if (string.IsNullOrEmpty(vendedor.Url) || string.IsNullOrEmpty(vendedor.Nombre) || string.IsNullOrEmpty(vendedor.Apellido) || string.IsNullOrEmpty(vendedor.Dni)
            || string.IsNullOrEmpty(vendedor.Matricula) || string.IsNullOrEmpty(vendedor.Mail) || string.IsNullOrEmpty(vendedor.Celular1) || string.IsNullOrEmpty(vendedor.Domicilio)
            || string.IsNullOrEmpty(vendedor.Localidad) || string.IsNullOrEmpty(vendedor.Logo) || string.IsNullOrEmpty(vendedor.Whatsapp))
        {

            await mostrarMensajes.MostrarMensajeError("Los Campos => Url, Nombre, Apellido, Dni, Matricula, Mail, Celular1, Domicilio," +
                " Localidad, Log y Whatsapp son Obligatorios");
            return;
        }

        if (!(UtilidadesString.ValidateCUIT(vendedor.CUIT)))
        {
            var mensajeError = "Nro de Documento Invalido";

            await mostrarMensajes.MostrarMensajeError(mensajeError);
            return;
        }
        #endregion
        await OnValidSubmit.InvokeAsync(null);
    }
}
